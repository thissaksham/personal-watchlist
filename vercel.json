{
    "rewrites": [
        {
            "source": "/api/tmdb/(.*)",
            "destination": "/api/proxy?path=$1"
        },
        {
            "source": "/api/rapid/(.*)",
            "destination": "/api/rapid_proxy?path=$1"
        },
        {
            "source": "/api/refresh",
            "destination": "/api/refresh"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/refresh",
            "schedule": "0 0 * * *"
        }
    ]
}